{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++-14 build active file",
      "type": "shell",
      "command": "/opt/homebrew/bin/g++-14",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generated task by Debugger."
    }
  ]
}
